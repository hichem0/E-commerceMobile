<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register"
        android:background="@drawable/arriereplan">


    <Button
            android:background="@drawable/btninscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btninscription" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.703" app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
            android:background="@drawable/username"
            android:layout_width="wrap_content"
            android:layout_height="119dp"
            android:inputType="textPersonName"
            android:hint="Username"
            android:textColorHint="#000"
            android:textColor="#000"
            android:paddingLeft="110dp"
            android:ems="10"
            android:id="@+id/nameuser"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"/>

    <EditText
            android:background="@drawable/email"
            android:layout_width="556dp"
            android:layout_height="123dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColorHint="#000"
            android:textColor="#000"
            android:paddingLeft="100dp"
            android:ems="10"
            android:id="@+id/emailuser"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.43" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.429"/>


    <EditText
            android:background="@drawable/password"
            android:layout_width="555dp"
            android:layout_height="127dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#000"
            android:textColor="#000"
            android:paddingLeft="100dp"
            android:ems="10"
            android:id="@+id/passworduser" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.561" app:layout_constraintHorizontal_bias="0.502"/>
    <ImageView
            android:layout_width="251dp"
            android:layout_height="70dp" app:srcCompat="@drawable/inscription"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.13" app:layout_constraintHorizontal_bias="0.467"/>
</android.support.constraint.ConstraintLayout>



