<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@drawable/arriereplan">
    <View  android:id="@+id/margin_top"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           app:layout_constraintHeight_percent="0.1"
           app:layout_constraintTop_toTopOf="parent"
          />
    <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="Connectez-vous"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/margin_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:id="@+id/title"
            android:textColor="#fff"
            android:textSize="24dp"/>
    <EditText
            android:id="@+id/email"
            android:drawableLeft="@drawable/ic_profile"
            android:background="@drawable/editbackgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Username"
            android:textColorHint="#000"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toTopOf="@+id/password"
            app:layout_constraintTop_toBottomOf="@+id/title"

    />
    <EditText
            android:id="@+id/password"
            android:drawableLeft="@drawable/ic_lock_outline"
            android:background="@drawable/editbackgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#000"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@+id/email"
    />
    <View  android:id="@+id/margin_top_button"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           app:layout_constraintHeight_percent="0.1"
           app:layout_constraintTop_toBottomOf="@+id/password"
    />
    <Button
            android:background="@drawable/ic_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnconnecter"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"
            android:text="Connexion"
            app:layout_constraintBottom_toTopOf="@id/logincreatebtn"
            app:layout_constraintTop_toBottomOf="@id/margin_top_button"
         />

    <TextView
            android:id="@+id/logincreatebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Vous n'avez pas de compte? CrÃ©ez votre compte  "
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnconnecter"
           />




</android.support.constraint.ConstraintLayout>


